<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="CreateDshTaskFile" author="Andrey">

		<createTable tableName="dsh_TaskFile">

		  <column name="id"  type="INT" autoIncrement="true">
			<constraints nullable="false" primaryKey="true"/>
		  </column>

		   <column name="FileContent"  type="VARBINARY(MAX)">
			<constraints nullable="true" />
		  </column>
		  
		  <column name="Name"  type="nvarchar(MAX)">
			<constraints nullable="false" />
		  </column>
		  
		  <column name="Type"  type="nvarchar(MAX)">
			<constraints nullable="true" />
		  </column>
			  
		  <column name="taskPost_id"  type="INT">
			<constraints nullable="false"/>
		  </column>
		
		</createTable>
		
		<addForeignKeyConstraint referencedColumnNames="id" referencedTableName="dsh_TaskPost"
			 baseColumnNames="taskPost_id" baseTableName="dsh_TaskFile"
			 constraintName="FK_TaskFile_TaskPost" onDelete="NO ACTION"/>
		 
  </changeSet>
</databaseChangeLog>