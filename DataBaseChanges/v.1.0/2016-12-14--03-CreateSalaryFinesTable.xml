<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="CreateSalaryFinesTable" author="aPetrosyan">

    <createTable tableName="dsh_SalaryFines">

      <column name="id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>

      <column name="salary_id" type="INT">
        <constraints nullable="false" />
      </column>

      <column name="fineName" type="NVARCHAR(50)">
        <constraints nullable="false" />
      </column>

      <column name="fineValue" type="DECIMAL">
        <constraints nullable="false" />
      </column>

    </createTable>

    <addForeignKeyConstraint referencedColumnNames="id" referencedTableName="dsh_Salary"
                                 baseColumnNames="salary_id" baseTableName="dsh_SalaryFines"
                           constraintName="FK_Salary_SalaryFines" onDelete="CASCADE"/>

  </changeSet>
</databaseChangeLog>

