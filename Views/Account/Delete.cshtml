@model Dashboard.Models.UserViewModel

@{
	ViewBag.Title = "Удаление пользователя";
}

<h2>Удаление пользователя</h2>

<h3>Вы уверены, что хотите удалить @Html.DisplayFor(model => model.UserName)?</h3>
<div>
	<h4>@Html.LabelFor(model => model)</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.UserName)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.UserName)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Email)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Role)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Role)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Lock)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Lock)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Удалить" class="btn btn-primary" /> |
			@Html.ActionLink("Назад", "UsersList")
		</div>
	}
</div>
